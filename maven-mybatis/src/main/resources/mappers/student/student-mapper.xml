<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="student">
  <insert id="insertStudent" parameterType="com.sh.app.student.entity.Student">
  	insert into 
  		student (no, name, tel)
  	values (
  		seq_student_no.nextval, 
  		#{name}, 
  		#{tel}
  	)
  	<selectKey order="AFTER" keyProperty="no" resultType="_int">
  		select seq_student_no.currval from dual
  	</selectKey>
  </insert>
  
  <insert id="insertStudentMap" parameterType="hashmap">
  	insert into 
  		student (no, name, tel)
  	values (
  		seq_student_no.nextval, 
  		#{name}, 
  		#{tel}
  	)
  </insert>
  
  <!-- select쿼리는 resultType속성을 생략할 수 없다. -->
  <select id="selectTotalContent" resultType="_int">
  	select
  		count(*)
  	from 
  		student
  </select>
  
  <select id="selectOneStudent" resultType="student">
  	select 
  		*
  	from 
  		student
  	where
  		no = #{no}
  </select>
  
  <update id="updateStudent">
  	update 
  		student
  	set 
  		name = #{name},
  		tel = #{tel}
  	where
  		no = #{no}
  </update>

  <delete id="deleteStudent">
  	delete from
  		student
  	where
  		no = #{no}
  </delete>
  
  <select id="selectOneStudentMap" resultMap="studentMap">
  	<!-- select 
  		no "studentNo",
  		name "studentName",
  		tel "studentTel"
  	from 
  		student
  	where
  		no = #{no} -->
  	select 
  		*
  	from 
  		student
  	where
  		no = #{no}
  </select>
  
  <!-- 재사용 가능 -->
  <resultMap type="map" id="studentMap">
  	<id column="no" property="no"/><!-- pk -->
  	<result column="name" property="name"/><!-- 나머지 컬럼 -->
  	<result column="tel" property="tel"/>
  	<result column="created_at" property="createdAt" javaType="java.time.LocalDateTime"/>
  </resultMap>
  
  <!-- *여러행을 리턴하는 경우에도 resultType은 한행에 일치하는 타입을 작성한다. -->
  <select id="selectStudentList" resultType="student">
  	select
  		*
  	from 
  		student
  	order by 
  		no desc
  </select>
  
  <select id="selectStudentMapList" resultMap="studentMap">
  	select
  		*
  	from 
  		student
  	order by 
  		no desc
  </select>
  
  <select id="selectStudentMapKey" resultMap="studentMap">
  	select
  		*
  	from 
  		student
  	order by 
  		no 
  </select>
  
</mapper>







